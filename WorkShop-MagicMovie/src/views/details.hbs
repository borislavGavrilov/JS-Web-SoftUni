
            <section id="details-page">

                <div class="main_card">
                    <div class="card_left">

                        <div class="card_datails">
                            
                            <h1>{{findetMovie.title}}</h1>
                            <div class="card-movie">
                                <div class="first-info">
                                    <p class="card-genre">Genre: {{findetMovie.genre}} </p>
                                    <p class="card-director">Directror: {{findetMovie.director}}</p>
                                    
                                </div>
                                <div class="second-info">
                                    
                                    <p class="card-year">Year: {{findetMovie.year}}</p>
                                    <p class="card-ranking">Rating: <span id="stars"> {{{needetStars}}}
                                    </span></p>
                                </div>

                            </div>

                            <p class="disc">Description: {{findetMovie.description}}</p>
                                <p class="card-category">Category: Movie</p>
                        </div>
                        {{#if isValid}}
                        <div class="details-btn">
                          <a href="/movie/{{findetMovie._id}}/attach" class="details">Attach</a>
                               <a href="#" class="details" >Edit</a>
                               <a href="#" class="details" >Delete</a>   
                        </div>
                         {{/if}}
                    </div>
                    <div class="card_right">
                        <img src={{findetMovie.imageUrl}}
                            alt={{findetMovie.title}}>
                    </div>
                </div>

                  <div class="main-cast-card">
                    {{#each findetMovie.casts}}
                      <div class="cast-card">
                        <div class="card-img">
                            <img src={{image}}
                                alt={{name}}>
                        </div>
                        <div class="cast-info">
                            <h1>{{name}}</h1>
                            <h3>Age: {{age}}</h3>
                            <h3>Born:{{born}}</h3>
                           
                        </div>
                    </div>
                    {{/each}}
                    
                   
                </div>

            </section>
 
